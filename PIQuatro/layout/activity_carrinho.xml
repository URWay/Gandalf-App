<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/activity_first_time"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context="com.senac.luiz.piquatro.FirstTime">

    <EditText
        android:id="@+id/editText2"
        android:layout_width="150dp"
        android:layout_height="wrap_content"
        android:layout_alignParentEnd="true"
        android:layout_centerVertical="true"
        android:ems="10"
        android:inputType="number"
        android:text="Preço" />

    <Button
        android:id="@+id/buttonComprar"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_alignParentEnd="true"
        android:layout_alignParentStart="true"
        android:background="@android:color/holo_blue_bright"
        android:text="COMPRAR"
        android:textStyle="normal|bold" />

    <TextView
        android:id="@+id/textView2"
        android:layout_width="match_parent"
        android:layout_height="30dp"
        android:text="Logo"
        android:layout_alignParentTop="true"
        android:layout_alignParentStart="true"
        android:layout_marginTop="10dp" />

    <SearchView
        android:layout_width="match_parent"
        android:layout_height="30dp"
        android:layout_below="@+id/textView2"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="10dp"
        android:id="@+id/searchView" />

    <TextView
        android:id="@+id/MeusProdutos"
        android:layout_width="180dp"
        android:layout_height="40dp"
        android:layout_alignParentStart="true"
        android:layout_below="@+id/searchView"
        android:layout_marginTop="14dp"
        android:text="Mesus Produtos"
        android:textAppearance="@style/TextAppearance.AppCompat" />

    <Button
        android:id="@+id/button2"
        android:layout_width="wrap_content"
        android:layout_height="40dp"
        android:text="COMPRAR"
        android:layout_alignTop="@+id/MeusProdutos"
        android:layout_alignParentEnd="true" />

    <TextView
        android:id="@+id/textView4"
        android:layout_width="376dp"
        android:layout_height="175dp"
        android:text=""
        android:layout_below="@+id/MeusProdutos"
        android:layout_alignParentStart="true" />

    <ImageView
        android:id="@+id/imageView2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="14dp"
        app:srcCompat="@mipmap/Logo"
        android:layout_below="@+id/MeusProdutos"
        android:layout_toStartOf="@+id/NomeProd" />

    <TextView
        android:id="@+id/NomeProd"
        android:layout_width="280dp"
        android:layout_height="wrap_content"
        android:text="Nome do produto"
        android:layout_alignTop="@+id/imageView2"
        android:layout_alignParentEnd="true"
        android:layout_alignBottom="@+id/imageView2" />

    <EditText
        android:id="@+id/Preco"
        android:layout_width="150dp"
        android:layout_height="wrap_content"
        android:layout_alignParentEnd="true"
        android:layout_centerVertical="true"
        android:ems="10"
        android:inputType="number"
        android:text="Preço" />

    <TextView
        android:id="@+id/ExcluirProd"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Esse é um link p excluir prod"
        android:layout_below="@+id/Preco"
        android:layout_toStartOf="@+id/button2"
        android:layout_marginTop="21dp" />

    <TextView
        android:id="@+id/textView8"
        android:layout_width="376dp"
        android:layout_height="120dp"
        android:text=""
        android:layout_below="@+id/textView4"
        android:layout_alignParentStart="true" />

    <TextView
        android:id="@+id/QtdeProd"
        android:layout_width="wrap_content"
        android:layout_height="50dp"
        android:layout_marginTop="10dp"
        android:text="QtdeProd Frete(?)"
        android:layout_below="@+id/textView4"
        android:layout_alignStart="@+id/imageView2" />

    <EditText
        android:id="@+id/editText3"
        android:layout_width="150dp"
        android:layout_height="50dp"
        android:layout_alignBottom="@+id/QtdeProd"
        android:layout_alignParentEnd="true"
        android:ems="10"
        android:inputType="number"
        android:text="Preço" />

    <TextView
        android:id="@+id/textTotal"
        android:layout_width="150dp"
        android:layout_height="50dp"
        android:text="Total"
        android:layout_above="@+id/buttonComprar"
        android:layout_alignStart="@+id/QtdeProd" />

    <EditText
        android:id="@+id/textTotal"
        android:layout_width="150dp"
        android:layout_height="50dp"
        android:layout_alignBottom="@+id/textView8"
        android:layout_alignParentEnd="true"
        android:ems="10"
        android:inputType="number"
        android:text="Total" />

</RelativeLayout>
